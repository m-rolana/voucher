  "_moduleAliases": {
    "@": "build/src"
  },
  "scripts": {
    "build": "rm -rf build && tsc",
    "start": "yarn build && node build/src/index.js",
    "lint": "npx eslint ./src/**/*.ts && npx prettier ./src/**/*.ts --check",
